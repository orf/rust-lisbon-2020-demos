{
  "author": "You <you@example.com>",
  "name": "rust-webpack-template",
  "version": "0.1.0",
  "scripts": {
    "build": "rimraf dist pkg && webpack",
    "start": "concurrently --kill-others \"npm:start:webpack\" \"npm:start:backend\"",
    "start:webpack": "rimraf dist pkg && webpack-dev-server --open -d",
    "start:backend": "cargo run -p backend",
    "test": "cargo test && wasm-pack test --headless"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "@wasm-tool/wasm-pack-plugin": "^1.1.0",
    "copy-webpack-plugin": "^5.0.3",
    "rimraf": "^3.0.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.3",
    "webpack-dev-server": "^3.7.1"
  }
}
